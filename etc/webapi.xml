            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/autopay/set-billing-address-by-id" method="POST">
        <service class="BlueMedia\BluePayment\Api\QuoteManagementInterface" method="setBillingAddressById"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/autopay/get-shipping-methods" method="POST">
        <service class="BlueMedia\BluePayment\Api\QuoteManagementInterface" method="getShippingMethods"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/autopay/set-shipping-method" method="POST">
        <service class="BlueMedia\BluePayment\Api\QuoteManagementInterface" method="setShippingMethod"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/autopay/place-order" method="POST">
        <service class="BlueMedia\BluePayment\Api\QuoteManagementInterface" method="placeOrder"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
</routes>
