<?xml version="1.0"?>
<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="autopay" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>Autopay</label>

        <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Enabled</label>
            <source_model>BlueMedia\BluePayment\Model\Config\Source\AutopayActive</source_model>
            <comment>For Hidden option - Autopay will be enabled only for URLs with added ?test_autopay parameter.</comment>
        </field>
        <field id="test_mode" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Test Mode</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
        </field>
        <field id="merchant_id" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Merchant ID</label>
            <comment>Used only for Autopay.</comment>
        </field>
        <field id="secret_key" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Secret Key</label>
        </field>

        <group id="button" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Autopay Checkout Button Style</label>
            <comment>Style for the Autopay Checkout button used for the product page. Also used as default value if the settings for the cart and mini-cart are not set.</comment>

            <field id="theme" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Theme</label>
                <source_model>BlueMedia\BluePayment\Model\Config\Source\AutopayTheme</source_model>
            </field>

            <field id="width" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Width</label>
                <source_model>BlueMedia\BluePayment\Model\Config\Source\AutopayWidth</source_model>
            </field>

            <field id="rounded" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Rounded</label>
                <source_model>BlueMedia\BluePayment\Model\Config\Source\AutopayRounded</source_model>
            </field>

            <field id="arrangement" translate="label" type="select" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Arrangement</label>
                <source_model>BlueMedia\BluePayment\Model\Config\Source\AutopayArrangement</source_model>
            </field>

            <field id="margin_top" translate="label" type="select" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Margin Top</label>
                <source_model>BlueMedia\BluePayment\Model\Config\Source\AutopayMargin</source_model>
            </field>

            <field id="margin_bottom" translate="label" type="select" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Margin Bottom</label>
                <source_model>BlueMedia\BluePayment\Model\Config\Source\AutopayMargin</source_model>
            </field>

            <group id="minicart" translate="label" type="text" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Autopay Checkout Button Style - Minicart</label>

                <field id="theme" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Theme</label>
                    <source_model>BlueMedia\BluePayment\Model\Config\Source\AutopayThemeExtended</source_model>
                </field>

                <field id="width" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Width</label>
                    <source_model>BlueMedia\BluePayment\Model\Config\Source\AutopayWidthExtended</source_model>
                </field>

                <field id="rounded" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Rounded</label>
                    <source_model>BlueMedia\BluePayment\Model\Config\Source\AutopayRoundedExtended</source_model>
                </field>

                <field id="arrangement" translate="label" type="select" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Arrangement</label>
                    <source_model>BlueMedia\BluePayment\Model\Config\Source\AutopayArrangementExtended</source_model>
                </field>

                <field id="margin_top" translate="label" type="select" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Margin Top</label>
                    <source_model>BlueMedia\BluePayment\Model\Config\Source\AutopayMarginExtended</source_model>
                </field>

                <field id="margin_bottom" translate="label" type="select" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Margin Bottom</label>
                    <source_model>BlueMedia\BluePayment\Model\Config\Source\AutopayMarginExtended</source_model>
                </field>
            </group>

            <group id="cart" translate="label" type="text" sortOrder="80" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Autopay Checkout Button Style - Cart</label>

                <field id="theme" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Theme</label>
                    <source_model>BlueMedia\BluePayment\Model\Config\Source\AutopayThemeExtended</source_model>
                </field>

                <field id="width" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Width</label>
                    <source_model>BlueMedia\BluePayment\Model\Config\Source\AutopayWidthExtended</source_model>
                </field>

                <field id="rounded" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Rounded</label>
                    <source_model>BlueMedia\BluePayment\Model\Config\Source\AutopayRoundedExtended</source_model>
                </field>

                <field id="arrangement" translate="label" type="select" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Arrangement</label>
                    <source_model>BlueMedia\BluePayment\Model\Config\Source\AutopayArrangementExtended</source_model>
                </field>

                <field id="margin_top" translate="label" type="select" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Margin Top</label>
                    <source_model>BlueMedia\BluePayment\Model\Config\Source\AutopayMarginExtended</source_model>
                </field>

                <field id="margin_bottom" translate="label" type="select" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Margin Bottom</label>
                    <source_model>BlueMedia\BluePayment\Model\Config\Source\AutopayMarginExtended</source_model>
                </field>
            </group>
        </group>
    </group>
</include>
