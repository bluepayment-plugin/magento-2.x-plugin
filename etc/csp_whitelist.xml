<?xml version="1.0" encoding="UTF-8"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="img-src">
            <values>
                <value id="img_bm" type="host">platnosci.bm.pl</value>
                <value id="img_bm_accept" type="host">platnosci-accept.bm.pl</value>
                <value id="img_google_pay" type="host">www.gstatic.com</value>
            </values>
        </policy>
        <policy id="script-src">
            <values>
                <value id="script_autopay_cards_accept" type="host">testcards.autopay.eu</value>
                <value id="script_autopay_cards_prod" type="host">cards.autopay.eu</value>
                <value id="script_gpay" type="host">pay.google.com</value>
                <value id="script_ga" type="host">*.google-analytics.com</value>
                <value id="script_gtm" type="host">*.googletagmanager.com</value>
                <value id="script_google_analytics" type="host">*.google-analytics.com</value>
                <value id="script_google_tag_manager" type="host">*.googletagmanager.com</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="style_autopay_pay_accept" type="host">testpay.autopay.eu</value>
                <value id="style_autopay_pay_prod" type="host">pay.autopay.eu</value>
                <value id="style_autopay_cards_accept" type="host">testcards.autopay.eu</value>
                <value id="style_autopay_cards_prod" type="host">cards.autopay.eu</value>
                <value id="style_google_apis" type="host">*.googleapis.com</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="frame_google_pay" type="host">pay.google.com</value>
                <value id="frame_google_play" type="host">play.google.com</value>
                <value id="frame_autopay_pay_accept" type="host">testpay.autopay.eu</value>
                <value id="frame_autopay_pay_prod" type="host">pay.autopay.eu</value>
                <value id="frame_autopay_cards_accept" type="host">testcards.autopay.eu</value>
                <value id="frame_autopay_cards_prod" type="host">cards.autopay.eu</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="connect_google_analytics" type="host">*.google-analytics.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
