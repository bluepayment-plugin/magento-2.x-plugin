<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Webapi\Controller\Rest\RequestValidator">
        <plugin name="request_validator"
                type="BlueMedia\BluePayment\Plugin\RequestValidatorPlugin"/>
    </type>

    <type name="Magento\Authorization\Model\CompositeUserContext">
        <arguments>
            <argument name="userContexts" xsi:type="array">
                <item name="autopayUserContext" xsi:type="array">
                    <item name="type" xsi:type="object">BlueMedia\BluePayment\Model\Authorization\AutopayUserContext</item>
                    <item name="sortOrder" xsi:type="string">80</item>
                </item>
            </argument>
        </arguments>
    </type>
</config>
